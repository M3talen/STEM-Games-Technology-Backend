<body class="dark-edition">
    <div class="wrapper ">
        <div class="sidebar" data-color="orange" data-background-color="black" data-image="/img/sidebar.jpg">
            <div class="logo">
                <img src="/img/logo.png" width="256px"></img>

            </div>
            <div class="sidebar-wrapper ">
                <ul class="nav">
                    <li class="nav-item active  ">
                        <a class="nav-link">
                            <i class="material-icons">receipt</i>
                            <p class="task2">
                                <%= data.name %>
                            </p>
                        </a>
                    </li>
                    <li class="nav-item   ">
                        <a class="nav-link">
                            <i class="material-icons">blur_circular</i>
                            <p class="task2">
                                <%= data.displayMetadata.points %> Points
                            </p>
                        </a>
                    </li>
                    <%if (reduced === true) { %>
                     <li class="nav-item active ">
                        <a class="nav-link">
                            <i class="material-icons">error</i>
                            <p class="task2">
                                Task points reduced
                            </p>
                        </a>
                    </li>
                    <% } %>
                    <li class="nav-item   ">
                        <a class="nav-link">
                            <i class="material-icons">fitness_center</i>
                            <p class="task2">
                                Difficulty :
                                <%= data.displayMetadata.hardness %>
                            </p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
